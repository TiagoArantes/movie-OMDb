<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textTelaCadastro"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:text="Digite o nome do Filme ou SÃ©rie" />
        android:textSize="18sp"

    <Button
        android:id="@+id/idCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idCancelar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Cadastrar" />

    <EditText
        android:id="@+id/idFilme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textTelaCadastro"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/idCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="79dp"
        android:text="Cancelar" />
</RelativeLayout>